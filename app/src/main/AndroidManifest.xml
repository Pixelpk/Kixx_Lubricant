            android:name=".User.ForgotPassword"
            android:screenOrientation="portrait" />

        <service android:name=".Fcm.FirebaseToken">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".Fcm.FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <uses-library
            android:name="com.google.android.maps"
            android:required="true" />

        <activity
            android:name=".Salesman.HomeScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".User.HomeScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".User.Signup"
            android:screenOrientation="portrait" />
        <activity
            android:name=".User.Signin"
            android:screenOrientation="portrait" />
        <activity
            android:name=".User.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="kixxmobile.page.link"
                    android:scheme="https" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>